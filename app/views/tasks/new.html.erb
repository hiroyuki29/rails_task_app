<h2>スケジュール新規作成</h2>


<%= render "shared/error", obj: @task %>

<%= form_for @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title, {class:"center"} %></td>
        </tr>
        <tr>
            <th><%= f.label :start_day ,"開始日" %></th>
            <td><%= f.date_field :start_day, {class:"center"} %></td>
        </tr>
        <tr>
            <th><%= f.label :end_day ,"終了日" %></th>
            <td><%= f.date_field :end_day, {class:"center"} %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日" %></th>
            <td>
                <%= f.check_box :all_day, {class:"check center"}, "○", " "  %>
                <p class = "center">終日の場合はここにチェック</p>
            </td>
        </tr>
        <tr>
            <th><%= f.label :memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo, {class:"memo"} %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュールを新規登録する"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
<% end %>